void DelUsingCMD(wchar_t* exepath)
{
	const wchar_t* batchfile = L"deletor.bat";
	const wchar_t* batcmd = L"Repeat\ndel \"%s\"\nif exist \"%s\" goto Repeat\ndel \"%s\"";
	wchar_t* temppath = new wchar_t[100];
	GetTempPath(100, temppath);

	// Tao file .bat va ghi lenh xoa file
	FILE* fp;
	errno_t err;
	_wchdir(temppath);
	err = _wfopen_s(&fp, batchfile, L"w");
	fwprintf(fp, batcmd, exepath, exepath, exepath);
	wcscat_s(temppath, 100, L"\\");
	wcscat_s(temppath, 100, batchfile);
	fwprintf(fp, L"\ndel %s", temppath);
	fclose(fp);

	// Chay file .bat trong folder Temp de xoa
	ShellExecute(NULL, L"open", temppath, NULL, NULL, SW_HIDE);
}
